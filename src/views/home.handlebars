<main>
    <!--Lista de Productos-->
    <section>
            <h1>Productos:</h1>
            <div class="vistaProductos">
            {{#each products}}
                <article class="productCard" >
                    <h4>{{this.title}}</h4>
                    <p>{{this.description}}</p>
                    <div class="productDetails">
                        <ul>
                            <li>Precio: ${{this.price}}</li>
                            <li>Categor√≠a: {{this.category}}</li>
                            <li>Stock: {{this.stock}}</li>
                        </ul>
                    </div>
                </article>
            {{/each}}
            </div>
    </section>
</main>